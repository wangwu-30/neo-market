{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AgentManifest",
  "type": "object",
  "required": ["name", "description", "skills", "pricing", "version"],
  "properties": {
    "name": {"type": "string"},
    "description": {"type": "string"},
    "skills": {"type": "array", "items": {"type": "string"}},
    "pricing": {
      "type": "object",
      "properties": {
        "base": {"type": "number"},
        "unit": {"type": "string"},
        "currency": {"type": "string"}
      }
    },
    "channels": {"type": "array", "items": {"type": "string"}},
    "did": {"type": "string"},
    "pubkeys": {"type": "array", "items": {"type": "string"}},
    "version": {"type": "string"}
  }
}
